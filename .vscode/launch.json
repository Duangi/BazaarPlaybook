{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Main (运行主程序)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "/opt/miniconda3/envs/reborn/bin/python"
        },
        {
            "name": "Python: 当前文件 (稳定版)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}